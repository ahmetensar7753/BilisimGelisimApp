<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:layout_margin="10dp"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/layout_bg_corner_radius2">

            <TextView
                android:id="@+id/textViewCardYorumBaslik"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="3dp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="3dp"
                android:fontFamily="@font/suez_one"
                android:gravity="center_horizontal|center_vertical"
                android:text="Yorum Başlığı burada olacak kaç kara"
                android:textColor="@color/red"
                android:textSize="12sp"
                app:layout_constraintBottom_toTopOf="@+id/scrollView2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textView55"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textViewCardKullaniciYorumAd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/suez_one"
                android:text="Ahmet Ensar Beşir"
                android:textColor="#009688"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView55"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/suez_one"
                android:text="-"
                android:textColor="#009688"
                app:layout_constraintStart_toEndOf="@+id/textViewCardKullaniciYorumAd"
                app:layout_constraintTop_toTopOf="parent" />

            <ScrollView
                android:id="@+id/scrollView2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewCardKullaniciYorumAd">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textViewCardKullaniciYorumu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/arbutus_slab"
                        android:text="Sunucuları sorunsuz, yavaşlama, erişim problemi vs. yok. Destekleri 10 numara 5 yıldız. Yazılım kaynaklı hatalarda bile yardım ettiler. Yahu yazılımcı yanlış kod yazıyor bunu dahi Güzel Hosting düzeltiyor. Bu kadarı da biraz abartı canım, çalışanlarınızı da düşünün biraz :) Fiyatları da diğer firmalara nazaran gayet dengeli durumda. Tüm bu etkenlerden dolayı +5 Yıldır birlikteyiz, kafam rahat. Tüm Güzel Hosting ekibine ayrı ayrı çok teşekkür ederim."
                        android:textColor="#4A4A4A"
                        android:textSize="12sp" />
                </LinearLayout>
            </ScrollView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>